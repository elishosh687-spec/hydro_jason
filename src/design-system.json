{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "meta": {
    "version": "1.0.0",
    "description": "Single source of truth for FeedEase design system. Extracted from Header, Hero, and PricingSelectionSection components.",
    "language": "Hebrew (RTL)",
    "tone": "Warm, family-friendly, reassuring"
  },

  "colors": {
    "primary": {
      "main": "#e07a63",
      "light": "#f2a085",
      "lighter": "#e5b7a3",
      "gradient": {
        "from": "#de7e63",
        "via": "#e79a7b",
        "to": "#e9a481"
      }
    },
    "text": {
      "primary": "#52423d",
      "secondary": "#7a6c66",
      "muted": "#b9a9a2",
      "price": "#5c4b43"
    },
    "background": {
      "page": "#fff6f2",
      "card": "#ffffff",
      "hover": "#f7f7f7"
    },
    "border": {
      "default": "#f2e3dd",
      "selected": "#e5b7a3",
      "divider": "#f0e2dc"
    },
    "status": {
      "star": "#fbbf24",
      "success": "#34d399"
    },
    "ui": {
      "white": "#ffffff",
      "radioUnchecked": "#cdb9b1"
    }
  },

  "typography": {
    "fontFamily": {
      "primary": "system-ui, -apple-system, 'Segoe UI', 'Heebo', 'Assistant', 'Rubik', sans-serif",
      "fallback": "sans-serif"
    },
    "fontWeights": {
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },
    "fontSizes": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "lineHeights": {
      "tight": 1.25,
      "normal": 1.5,
      "relaxed": 1.625
    },
    "usage": {
      "h1": {
        "size": ["3xl", "4xl", "5xl"],
        "weight": "bold",
        "lineHeight": "tight",
        "color": "text.primary"
      },
      "h2": {
        "size": ["2xl", "3xl"],
        "weight": "bold",
        "lineHeight": "tight",
        "color": "primary.main"
      },
      "body": {
        "size": ["base", "lg"],
        "weight": "normal",
        "lineHeight": "relaxed",
        "color": "text.secondary"
      },
      "price": {
        "size": "3xl",
        "weight": "bold",
        "color": "text.price"
      },
      "priceOriginal": {
        "size": "sm",
        "weight": "normal",
        "color": "text.muted",
        "decoration": "line-through"
      },
      "savings": {
        "size": "sm",
        "weight": "medium",
        "color": "primary.main"
      },
      "navLink": {
        "size": "base",
        "weight": "medium",
        "color": "text.primary"
      },
      "logo": {
        "size": "2xl",
        "weight": "bold",
        "color": "primary.main"
      },
      "label": {
        "size": "lg",
        "weight": "semibold",
        "color": "text.primary"
      },
      "caption": {
        "size": "xs",
        "weight": "normal",
        "color": "text.secondary"
      }
    }
  },

  "spacing": {
    "0": "0",
    "1": "0.25rem",
    "2": "0.5rem",
    "3": "0.75rem",
    "4": "1rem",
    "5": "1.25rem",
    "6": "1.5rem",
    "8": "2rem",
    "10": "2.5rem",
    "12": "3rem",
    "16": "4rem",
    "20": "5rem",
    "container": {
      "mobile": "1rem",
      "desktop": "2rem"
    },
    "section": {
      "mobile": "3rem",
      "tablet": "4rem",
      "desktop": "5rem"
    }
  },

  "radii": {
    "sm": "0.25rem",
    "md": "0.5rem",
    "lg": "0.75rem",
    "xl": "1rem",
    "2xl": "1rem",
    "full": "9999px"
  },

  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1)",
    "card": "0 10px 30px rgba(0, 0, 0, 0.06)",
    "button": "0 6px 16px rgba(224, 122, 99, 0.35)",
    "buttonHover": "0 8px 20px rgba(224, 122, 99, 0.45)"
  },

  "components": {
    "button": {
      "primary": {
        "background": "gradient(from-[#de7e63] via-[#e79a7b] to-[#e9a481])",
        "color": "#ffffff",
        "fontSize": ["base", "lg"],
        "fontWeight": "bold",
        "padding": {
          "x": "2rem",
          "y": ["0.875rem", "1rem"]
        },
        "borderRadius": "full",
        "shadow": "button",
        "hover": {
          "shadow": "buttonHover",
          "scale": 1.02
        },
        "active": {
          "scale": 0.98
        }
      },
      "secondary": {
        "background": "transparent",
        "color": "text.primary",
        "hoverColor": "primary.main",
        "hoverBackground": "#f7f7f7",
        "fontSize": "base",
        "fontWeight": "medium",
        "padding": {
          "x": "0.5rem",
          "y": "0.5rem"
        },
        "borderRadius": "lg",
        "transition": "colors"
      }
    },

    "card": {
      "pricing": {
        "background": "background.card",
        "borderRadius": "2xl",
        "padding": "1.25rem",
        "border": {
          "default": "1px solid #f2e3dd",
          "selected": "2px solid #e5b7a3"
        },
        "shadow": {
          "default": "none",
          "selected": "card"
        },
        "transition": "all",
        "cursor": "pointer"
      },
      "default": {
        "background": "background.card",
        "borderRadius": "xl",
        "padding": "1.25rem",
        "shadow": "card"
      }
    },

    "badge": {
      "floating": {
        "background": "primary.main",
        "color": "#ffffff",
        "fontSize": "sm",
        "fontWeight": "medium",
        "padding": {
          "x": "1rem",
          "y": "0.375rem"
        },
        "borderRadius": "full",
        "shadow": "sm",
        "position": "absolute",
        "top": "-0.75rem",
        "left": "1.5rem"
      },
      "inline": {
        "background": "primary.light",
        "color": "#ffffff",
        "fontSize": ["sm", "base"],
        "fontWeight": "medium",
        "padding": {
          "x": "1.5rem",
          "y": "0.625rem"
        },
        "borderRadius": "full",
        "shadow": "sm"
      },
      "cart": {
        "background": "primary.main",
        "color": "#ffffff",
        "fontSize": "xs",
        "fontWeight": "bold",
        "size": "1.25rem",
        "borderRadius": "full",
        "position": "absolute",
        "top": "-0.25rem",
        "right": "-0.25rem"
      }
    },

    "discountCircle": {
      "background": "primary.main",
      "color": "#ffffff",
      "size": "4rem",
      "borderRadius": "full",
      "shadow": "sm",
      "text": {
        "label": {
          "fontSize": "xs",
          "fontWeight": "medium",
          "lineHeight": "tight"
        },
        "value": {
          "fontSize": "lg",
          "fontWeight": "bold",
          "lineHeight": "tight"
        }
      }
    },

    "radioButton": {
      "size": "1.5rem",
      "borderRadius": "full",
      "checked": {
        "background": "primary.main",
        "color": "#ffffff",
        "icon": "Check"
      },
      "unchecked": {
        "border": "2px solid #cdb9b1",
        "icon": "Circle"
      }
    },

    "header": {
      "background": "background.card",
      "height": ["4rem", "5rem"],
      "shadow": "sm",
      "padding": {
        "x": ["1rem", "2rem"]
      }
    },

    "section": {
      "background": "background.page",
      "padding": {
        "y": {
          "mobile": "3rem",
          "tablet": "4rem",
          "desktop": "5rem"
        }
      },
      "container": {
        "maxWidth": "48rem",
        "margin": "0 auto",
        "padding": {
          "x": ["1rem", "2rem"]
        }
      }
    },

    "starRating": {
      "size": ["1.25rem", "1.5rem"],
      "color": "#fbbf24",
      "fill": "#fbbf24",
      "gap": "0.25rem"
    },

    "input": {
      "default": {
        "background": "background.card",
        "border": "1px solid #f2e3dd",
        "borderRadius": "lg",
        "padding": {
          "x": "1rem",
          "y": "0.75rem"
        },
        "fontSize": "base",
        "color": "text.primary",
        "focus": {
          "borderColor": "primary.main",
          "outline": "none",
          "shadow": "0 0 0 3px rgba(224, 122, 99, 0.1)"
        }
      }
    }
  },

  "layout": {
    "container": {
      "maxWidth": "1120px",
      "padding": {
        "mobile": "1rem",
        "desktop": "2rem"
      }
    },
    "grid": {
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3
      },
      "gap": "1rem"
    },
    "breakpoints": {
      "sm": "640px",
      "md": "768px",
      "lg": "1024px",
      "xl": "1280px"
    }
  },

  "transitions": {
    "default": "all 150ms ease-in-out",
    "fast": "all 100ms ease-in-out",
    "slow": "all 300ms ease-in-out",
    "colors": "color 150ms ease-in-out, background-color 150ms ease-in-out"
  },

  "directionality": {
    "default": "rtl",
    "notes": "All layouts are designed RTL-first for Hebrew. Ensure proper mirroring for LTR languages."
  },

  "principles": [
    "Warm minimalism: Use soft peach/coral colors (#e07a63) with brown text (#52423d) for a friendly, approachable feel",
    "Generous spacing: Maintain breathing room between sections and elements",
    "Rounded corners: Use pill buttons (full radius) and rounded cards (2xl radius) for friendliness",
    "Subtle shadows: Keep shadows light (0.06 opacity) to maintain softness",
    "Clear hierarchy: Use font weight (bold vs medium) rather than dramatic size changes",
    "RTL-first: Design for Hebrew right-to-left reading direction",
    "Trust signals: Highlight savings, free shipping, and social proof prominently",
    "Accessible contrast: Ensure sufficient color contrast for readability"
  ],

  "usageGuidelines": {
    "colors": {
      "primary": "Use #e07a63 for CTAs, highlights, and brand moments",
      "text": "Use #52423d for primary text, #7a6c66 for secondary/body text",
      "backgrounds": "Use #fff6f2 for page background, #ffffff for cards"
    },
    "typography": {
      "headings": "Always bold weight. Use color contrast (mix #52423d and #e07a63) for emphasis",
      "body": "Normal weight with #7a6c66 color. Line-height relaxed for readability",
      "prices": "Bold 3xl size in #5c4b43. Show original price in smaller muted #b9a9a2 with strikethrough"
    },
    "spacing": {
      "sections": "Use 3-5rem vertical padding depending on viewport",
      "cards": "1.25rem internal padding, 1rem gap between stacked cards",
      "buttons": "2rem horizontal, ~1rem vertical padding"
    },
    "components": {
      "buttons": "Primary buttons use gradient background with full border-radius. Include hover scale (1.02) and shadow enhancement",
      "cards": "White background on warm page background. Selected state uses thicker border (#e5b7a3) and shadow",
      "badges": "Use for floating labels (absolute positioned), inline social proof, and cart counts"
    }
  }
}

